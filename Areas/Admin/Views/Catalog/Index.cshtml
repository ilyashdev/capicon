@using capicon.Models
@model List<ProductViewModel>
@{
    ViewData["Title"] = "Управление продуктами";
    Layout = "_AdminLayout";
}

<h2>@ViewData["Title"]</h2>
<a asp-action="Create" class="btn btn-success mb-3">Новый продукт</a>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Название</th>
            <th>Подзаголовок</th>
            <th>Изображение</th>
            <th>Спецификации</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Title</td>
                <td>@product.Subtitle</td>
                <td>
                    @if (!string.IsNullOrEmpty(product.MainImage))
                    {
                        <img src="~/@product.MainImage" style="max-height: 50px;" class="img-thumbnail" />
                    }
                </td>
                <td>
                    @if (product.Specifications != null && product.Specifications.Any())
                    {
                        <ul class="list-unstyled mb-0">
                            @foreach (var spec in product.Specifications.Take(2))
                            {
                                <li>@spec.Text: @spec.Amount</li>
                            }
                            @if (product.Specifications.Count > 2)
                            {
                                <li>...</li>
                            }
                        </ul>
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@product.Id" class="btn btn-warning btn-sm">
                        <i class="fas fa-edit"></i> Редактировать
                    </a>
                    <form asp-action="Delete" method="post" style="display:inline">
                        <input type="hidden" name="id" value="@product.Id" />
                        <button type="submit" class="btn btn-danger btn-sm"
                                onclick="return confirm('Вы уверены, что хотите удалить этот продукт?')">
                            <i class="fas fa-trash"></i> Удалить
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>