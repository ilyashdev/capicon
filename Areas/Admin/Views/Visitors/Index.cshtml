@model List<capicon.Models.Visitors.DailyVisitors>

@{
    ViewData["Title"] = "Список посетителей";
}

<h2>Посетители с @ViewBag.StartDate по @ViewBag.EndDate</h2>

<form method="get" class="mb-3">
    <div class="form-group">
        <label for="startDate">Дата начала:</label>
        <input type="date" id="startDate" name="startDate" 
               value="@(ViewBag.StartDate != null ? DateTime.ParseExact(ViewBag.StartDate, "dd-MM-yyyy", null).ToString("yyyy-MM-dd") : "")" 
               class="form-control" />
    </div>
    <div class="form-group">
        <label for="endDate">Дата окончания:</label>
        <input type="date" id="endDate" name="endDate" 
               value="@(ViewBag.EndDate != null ? DateTime.ParseExact(ViewBag.EndDate, "dd-MM-yyyy", null).ToString("yyyy-MM-dd") : "")" 
               class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary mt-2">Показать</button>
</form>

<table class="table table-bordered table-striped">
    <thead>
    <tr>
        <th>Количество посетителей</th>
        <th>Дата посещения</th>
    </tr>
    </thead>
    <tbody>
    @foreach(var visitor in Model)
    {
        <tr>
            <td>@visitor.VisitorsCount</td>
            <td>@visitor.Date.ToString("dd-MM-yyyy")</td>
        </tr>
    }
    </tbody>
</table>