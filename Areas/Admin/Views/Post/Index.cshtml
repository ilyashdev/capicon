@using capicon.Models;
@model List<PostModel>
@{
    ViewData["Title"] = "Посты";
}

<h2>@ViewData["Title"]</h2>
<a asp-action="Add" class="btn btn-success mb-3">Новый пост</a>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Пост</th>
            <th>Дата</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var post in Model)
        {
            <tr>
                <td>@post.Title</td>
                <td>@post.dateTime</td>
                <td>
                    <a asp-area="Post" asp-controller="Home" asp-action="Index" asp-route-id="@post.Id"
                        class="btn btn-info btn-sm">Просмотр</a>
                    <a asp-action="Edit" asp-route-id="@post.Id" class="btn btn-warning btn-sm">Редактировать</a>
                    <form asp-action="Delete" asp-route-id="@post.Id" method="post" style="display:inline">
                        <button type="submit" class="btn btn-danger btn-sm"
                            onclick="return confirm('Удалить пост?');">Удалить</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
