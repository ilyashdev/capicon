@using capicon_backend.Models.User;
@model UserViewModel
@{
    ViewData["Title"] = "Информация о пользователе";
}

<h2>@ViewData["Title"]</h2>

<div class="card">
    <div class="card-body">
        <p><strong>Id:</strong> @Model.Id</p>
        <p><strong>Email:</strong> @Model.Email</p>
        <p><strong>Имя пользователя:</strong> @Model.Username</p>
        <p><strong>Роль:</strong> @Model.Role</p>
    </div>
</div>

<a asp-action="Index" class="btn btn-secondary mt-3">Назад</a>