@using capicon.Areas.Admin.Models;
@model List<UserShowModel>
@{
    ViewData["Title"] = "Пользователи";
}

<h2>@ViewData["Title"]</h2>
<h3>Всего пользователей: @ViewBag.UserCount</h3>
<a asp-action="AddUser" class="btn btn-success mb-3">Добавить пользователя</a>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Email</th>
            <th>Логин</th>
            <th>Роль</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Email</td>
                <td>@user.UserName</td>
                <td>@string.Join(", ", user.Roles)</td>
                <td>
                    <a asp-action="UserDetails" asp-route-id="@user.Id" class="btn btn-info btn-sm">Просмотр</a>
                    <a asp-action="EditUser" asp-route-id="@user.Id" class="btn btn-warning btn-sm">Редактировать</a>
                    <form asp-action="DeleteUser" asp-route-id="@user.Id" method="post" style="display:inline">
                        <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('Удалить пользователя?');">Удалить</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
