@model List<capicon.Models.ProductViewModel>
@{
    ViewData["Title"] = "Каталог продуктов";
    Layout = "_Layout";
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    @foreach (var product in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
                <img src="/uploads/@product.MainImage" class="card-img-top" alt="@product.Title" />
                <div class="card-body">
                    <h5 class="card-title">@product.Title</h5>
                    <p class="card-text text-muted">@product.Subtitle</p>
                    <a asp-controller="Product" asp-action="Details" asp-route-id="@product.Id" class="btn btn-primary">
                        Подробнее
                    </a>
                </div>
            </div>
        </div>
    }
</div>